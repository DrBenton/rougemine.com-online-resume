
<section class="skills-container">
    <h3>
        <img src="img/icons/headers/tool-red.png" alt="">
        {{ 'main_skills'|trans }}
    </h3>

    <div class="main-technologies-container">
        {% for technology in technologies.mainTechnologies %}
            <div class="tech clearfix">
                <span class="icon">
                    <img src="img/icons/techs/{{ technology.icon }}.png" alt="{{ technology.title }}">
                </span>
                <span class="title">
                    {{ macros.techDisplay(technology) }}
                </span>
                {% if technology.hasContributorUrl() %}
                    {{ macros.techContributorDisplay(technology, document.language) }}
                {% endif %}
            </div>
        {% endfor %}
    </div>{# end .main-technologies-container #}

    <div class="other-technologies-container">
        <h4>{{ 'other_skills'|trans }}</h4>
        {% spaceless %}
        {% for technology in technologies.otherTechnologies %}
            <span class="tech-with-icon {{ technology.icon }}">
                {{- macros.techDisplay(technology) -}}
                {% if technology.hasContributorUrl() %}
                    {{- macros.techContributorDisplay(technology, document.language) -}}
                {% endif %}
            </span>
            {%- if not loop.last %}, {% endif -%}
        {% endfor %}
        {% endspaceless %}
    </div>{# end .other-technologies-container #}

    <div class="tools-container">
        <h4>{{ 'tools'|trans }}</h4>
        {% for tool in technologies.tools %}
            {{- macros.toolDisplay(tool) -}}
            {{- loop.last ? '...' : ', ' -}}
        {% endfor %}

    </div>{# end .tools-container #}

</section>{# end .skills-container #}
